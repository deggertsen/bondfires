{
  "name": "bondfires",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "typecheck": "turbo typecheck",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "clean": "turbo clean && rm -rf node_modules",
    "eas-build-pre-install": "corepack enable && corepack prepare yarn@4.12.0 --activate"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^25.0.3",
    "turbo": "^2.3.0",
    "typescript": "^5.7.2"
  },
  "packageManager": "yarn@4.12.0",
  "dependencies": {
    "@auth/core": "~0.37.0",
    "@aws-sdk/client-s3": "^3.965.0",
    "@aws-sdk/s3-request-presigner": "^3.965.0",
    "@convex-dev/auth": "^0.0.90",
    "convex": "^1.31.3"
  }
}
